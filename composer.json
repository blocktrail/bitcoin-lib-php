{
    "name": "blocktrail/bitcoin-lib",
    "description": "Fork of bitwasp/bitcoin-lib to be able to publish and use unmerged pull requests.",
    "keywords": ["bitcoin", "php", "bip32", "electrum", "ecc", "transactions", "HD wallet","btc", "cryptocurrency"],
    "license": "Unlicense",
    "authors": [
        {
            "name": "Ruben de Vries",
            "email": "ruben@blocktrail.com"
        },
        {
            "name": "Thomas Kerin",
            "email": "thomas.kerin@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "BitWasp\\BitcoinLib\\": "src/"
        }
    },
    "require": {
        "mdanter/ecc": "0.2.0",
        "php": ">=5.3.3",
        "ext-gmp": "*",
        "ext-mcrypt": "*"
    },
    "suggest": {
        "ext-intl": "Required for BIP39 Mnemonic Seeds with UTF-8 passphrases",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7",
        "squizlabs/php_codesniffer": "~1.5"
    }
}

